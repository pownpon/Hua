<?xml version="1.0" encoding="utf-8"?>
<androidx.slidingpanelayout.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/spl_root_base_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/translucent" />

    <FrameLayout
        android:id="@+id/fl_root_base_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_page">

        <FrameLayout
            android:id="@+id/rl_title_bas_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/h_page_title"
            android:background="@color/topic"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_title_base_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back_base_layout"
                    android:layout_width="@dimen/wh_icon"
                    android:layout_height="@dimen/wh_icon"
                    android:src="@mipmap/icon" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/iv_rone_base_layout"
                    android:layout_width="@dimen/wh_icon"
                    android:layout_height="@dimen/wh_icon" />

                <ImageView
                    android:id="@+id/iv_rtwo_base_layout"
                    android:layout_width="@dimen/wh_icon"
                    android:layout_height="@dimen/wh_icon" />

                <ImageView
                    android:id="@+id/iv_rthree_base_layout"
                    android:layout_width="@dimen/wh_icon"
                    android:layout_height="@dimen/wh_icon" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

</androidx.slidingpanelayout.widget.SlidingPaneLayout>