<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".picker.ViewPictureActivity">

    <LinearLayout
        android:id="@+id/ll_title_act_view_picture"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/black_deep"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back_act_view_picture"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:padding="10dp"
            android:src="@drawable/ic_back" />

        <View
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/tv_sure_act_view_picture"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#FF369963"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFf1f1f1"
            android:textSize="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_act_view_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="选择图片"
        android:textColor="#FFFFFFFF"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/ll_title_act_view_picture"
        app:layout_constraintLeft_toLeftOf="@+id/ll_title_act_view_picture"
        app:layout_constraintRight_toRightOf="@+id/ll_title_act_view_picture"
        app:layout_constraintTop_toTopOf="@+id/ll_title_act_view_picture" />

    <LinearLayout
        android:id="@+id/ll_bottom_act_view_picture"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@color/black_deep"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tv_dir_act_view_picture"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_youjiaobiao"
            android:gravity="center"
            android:text="确认"
            android:textColor="#FFf1f1f1"
            android:textSize="15dp" />

        <View
            android:layout_width="2dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/transparent" />

        <ImageView
            android:id="@+id/iv_choose_act_view_picture"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/ic_circle" />

        <TextView
            android:id="@+id/tv_choose_act_view_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="选择"
            android:textColor="#FFf1f1f1"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tv_view_act_view_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="预览"
            android:textColor="#FFf1f1f1"
            android:textSize="17dp" />

    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_picture_act_view_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom_act_view_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_title_act_view_picture" />


</androidx.constraintlayout.widget.ConstraintLayout>